<header class="item-header">
    <h1 class="itemname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
    <general>
        <itemimage>
            {{#if (and (includes (getSetting "clickableImageItemTypes") item.type)  (or (window "game" "user" "isGM") (eq (getSetting "clickableImageCheckboxForGMOnly") false)) )}}
                <div class="item-header-wrapper">
                    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
                    <div>
                        <input type="checkbox" id="clickable-image-{{item._id}}" name="system.clickableImage"
                            {{checked item.system.clickableImage}}>
                        <label for="clickable-image-{{item._id}}">{{localize "WITCHER.Item.ClickableImage"}}</label>
                    </div>
                </div>
            {{else}}
                <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
            {{/if}}
        </itemimage>

        <table class="information">
            <tr class="item-header-tablerow">
                <td>
                    <label>{{localize "WITCHER.Spell.type"}}</label>
                </td>
                <td>
                    <select name="system.class" id="profession-select">
                        {{#select item.system.class}}
                            <option value="Spells">{{localize "WITCHER.Spell.Spells"}}</option>
                            <option value="Invocations">{{localize "WITCHER.Spell.Invocations"}}</option>
                            <option value="Witcher">{{localize "WITCHER.Spell.Witcher"}}</option>
                            <option value="Rituals">{{localize "WITCHER.Spell.Rituals"}}</option>
                            <option value="Hexes">{{localize "WITCHER.Spell.Hexes"}}</option>
                            <option value="MagicalGift">{{localize "WITCHER.Spell.MagicalGift"}}</option>
                        {{/select}}
                    </select>
                </td>
            </tr>
            {{#unless (eq item.system.class "Hexes")}}
                <tr class="item-header-tablerow">
                    <td>
                        <label>{{localize "WITCHER.Actor.Profession.Level"}}</label>
                    </td>
                    <td>
                        {{#unless (eq item.system.class "MagicalGift")}}
                            <select name="system.level">
                                {{#select item.system.level}}
                                    <option value="novice">{{localize "WITCHER.Spell.Novice"}}</option>
                                    <option value="journeyman">{{localize "WITCHER.Spell.Journeyman"}}</option>
                                    <option value="master">{{localize "WITCHER.Spell.Master"}}</option>
                                {{/select}}
                            </select>
                        {{/unless}}
                        {{#if (eq item.system.class "MagicalGift")}}
                            <select name="system.level">
                                {{#select item.system.level}}
                                    <option value="minor gift">{{localize "WITCHER.Spell.MinorGift"}}</option>
                                    <option value="major gift">{{localize "WITCHER.Spell.MajorGift"}}</option>
                                {{/select}}
                            </select>
                        {{/if}}
                    </td>
                </tr>
            {{/unless}}
            <tr class="item-header-tablerow">
            {{#if (or (eq item.system.class "Spells") (eq item.system.class "Witcher"))}}
                <td>
                    <label>{{localize "WITCHER.Spell.Element"}}</label>
                </td>
                <td>
                    <select name="system.source">
                        {{#select item.system.source}}
                            <option value="mixedElements">{{localize "WITCHER.Spell.Mixed"}}</option>
                            <option value="earth">{{localize "WITCHER.Spell.Earth"}}</option>
                            <option value="air">{{localize "WITCHER.Spell.Air"}}</option>
                            <option value="fire">{{localize "WITCHER.Spell.Fire"}}</option>
                            <option value="Water">{{localize "WITCHER.Spell.Water"}}</option>
                        {{/select}}
                    </select>
                </td>
            {{/if}}
            {{#if (eq item.system.class "Invocations")}}
                <td>
                    <label>{{localize "WITCHER.Spell.Type"}}</label>
                </td>
                <td>
                    <select name="system.source">
                        {{#select item.system.source}}
                            <option value="druid">{{localize "WITCHER.Spell.Druid"}}</option>
                            <option value="preacher">{{localize "WITCHER.Spell.Preacher"}}</option>
                            <option value="arch priest">{{localize "WITCHER.Spell.Archpriest"}}</option>
                        {{/select}}
                    </select>
                </td>
            {{/if}}
            </tr>
        </table>
    </general>
</header>